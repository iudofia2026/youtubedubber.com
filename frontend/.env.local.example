# YT Dubber Frontend Environment Configuration
# Copy this file to .env.local and update with your actual values

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Mode
# Set to 'true' to enable development authentication bypass
# This allows testing without Supabase setup
NEXT_PUBLIC_DEV_MODE=true

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# Supabase Project URL
# Get this from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anonymous Key
# Get this from your Supabase project settings > API
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================

# Backend API Base URL
# Development: http://localhost:8000
# Production: https://api.youtubedubber.com
NEXT_PUBLIC_API_URL=http://localhost:8000

# Frontend Application URL
# Used for callbacks and redirects
# Development: http://localhost:3000
# Production: https://youtubedubber.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# WebSocket URL (for real-time updates)
# Development: ws://localhost:8000/ws
# Production: wss://api.youtubedubber.com/ws
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# =============================================================================
# PAYMENT CONFIGURATION (Optional)
# =============================================================================

# Stripe Publishable Key
# Get this from your Stripe dashboard
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# =============================================================================
# ANALYTICS CONFIGURATION (Optional)
# =============================================================================

# Google Analytics Tracking ID
# NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# For production deployment, update these values:
# NEXT_PUBLIC_DEV_MODE=false
# NEXT_PUBLIC_API_URL=https://api.youtubedubber.com
# NEXT_PUBLIC_APP_URL=https://youtubedubber.com
# NEXT_PUBLIC_WS_URL=wss://api.youtubedubber.com/ws
# NEXT_PUBLIC_SUPABASE_URL=https://your-production-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_anon_key
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_live_stripe_key