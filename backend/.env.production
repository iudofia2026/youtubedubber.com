# Production Environment Configuration
# YT Dubber API - Production Settings

# Database Configuration
DATABASE_URL=postgresql://username:password@production-db-host:5432/yt_dubber_prod
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_production_service_key

# AI Services
DEEPGRAM_API_KEY=your_production_deepgram_key
OPENAI_API_KEY=your_production_openai_key

# Application Configuration
APP_NAME=YT Dubber API
DEBUG=false
SECRET_KEY=your_production_secret_key_here_must_be_very_secure
CORS_ORIGINS=https://youtubedubber.com,https://www.youtubedubber.com

# Storage Configuration
STORAGE_BUCKET=yt-dubber-uploads-prod
MAX_FILE_SIZE=100MB
ALLOWED_AUDIO_TYPES=audio/mpeg,audio/wav,audio/mp3,audio/m4a

# Worker Configuration
WORKER_POLL_INTERVAL=5
MAX_CONCURRENT_JOBS=10
JOB_TIMEOUT=3600

# Security Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_STORAGE_URL=redis://production-redis:6379/0
LOG_LEVEL=INFO
SECURE_COOKIES=true
HTTPS_ONLY=true

# Monitoring Configuration
SENTRY_DSN=your_sentry_dsn_here
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true

# Performance Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=300
CONNECTION_POOL_SIZE=20