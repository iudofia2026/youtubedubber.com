# Staging Environment Configuration
# YT Dubber API - Staging Settings

# Database Configuration
DATABASE_URL=postgresql://username:password@staging-db-host:5432/yt_dubber_staging
SUPABASE_URL=https://your-staging-project.supabase.co
SUPABASE_SERVICE_KEY=your_staging_service_key

# AI Services
DEEPGRAM_API_KEY=your_staging_deepgram_key
OPENAI_API_KEY=your_staging_openai_key

# Application Configuration
APP_NAME=YT Dubber API - Staging
DEBUG=false
SECRET_KEY=your_staging_secret_key_here
CORS_ORIGINS=https://staging.youtubedubber.com,http://localhost:3000

# Storage Configuration
STORAGE_BUCKET=yt-dubber-uploads-staging
MAX_FILE_SIZE=100MB
ALLOWED_AUDIO_TYPES=audio/mpeg,audio/wav,audio/mp3,audio/m4a

# Worker Configuration
WORKER_POLL_INTERVAL=5
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT=3600

# Security Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_STORAGE_URL=redis://staging-redis:6379/0
LOG_LEVEL=DEBUG
SECURE_COOKIES=true
HTTPS_ONLY=true

# Monitoring Configuration
SENTRY_DSN=your_staging_sentry_dsn_here
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true

# Performance Configuration
MAX_WORKERS=2
WORKER_TIMEOUT=300
CONNECTION_POOL_SIZE=10