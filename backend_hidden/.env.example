# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres
SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_KEY=your_service_key

# AI Services
DEEPGRAM_API_KEY=your_deepgram_key
OPENAI_API_KEY=your_openai_key

# Application Configuration
APP_NAME=YT Dubber API
DEBUG=false
SECRET_KEY=your_secret_key_here
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Storage Configuration
STORAGE_BUCKET=yt-dubber-uploads
MAX_FILE_SIZE=100MB
ALLOWED_AUDIO_TYPES=audio/mpeg,audio/wav,audio/mp3,audio/m4a,video/mp4

# Worker Configuration
WORKER_POLL_INTERVAL=5
MAX_CONCURRENT_JOBS=3
JOB_TIMEOUT=3600

# Security Configuration
# hCaptcha secret key for bot protection (get from https://hcaptcha.com)
# Leave empty to disable CAPTCHA (not recommended for production)
HCAPTCHA_SECRET_KEY=your_hcaptcha_secret_key_here

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
# Redis URL for distributed rate limiting (required for production)
# Local: redis://localhost:6379
# Railway/Render/Upstash: redis://default:password@host:port
REDIS_URL=redis://localhost:6379

# Rate Limiting Thresholds (optional - defaults shown)
AUTH_RATE_LIMIT_PER_MINUTE=10
AUTH_RATE_LIMIT_PER_HOUR=50
SIGNUP_RATE_LIMIT_PER_HOUR=5
PASSWORD_RESET_RATE_LIMIT_PER_HOUR=3
BRUTE_FORCE_THRESHOLD=10